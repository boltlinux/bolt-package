import os
import sys
import getopt
import logging

# make repo-tool relocatable
INSTALL_DIR = os.path.normpath(os.path.dirname(
    os.path.realpath(sys.argv[0])) + os.sep + ".." )
sys.path.insert(1, INSTALL_DIR + os.sep + 'lib')

from org.boltlinux.error import BoltError, InvocationError
from org.boltlinux.package.util import switch
from org.boltlinux.package.appconfig import AppConfig
from org.boltlinux.repository.debiansources import DebianSources
from org.boltlinux.repository.boltsources import BoltSources
from org.boltlinux.repository.flaskapp import app, db, app_init
from org.boltlinux.repository.models import *
from org.boltlinux.package.version import VERSION as BOLT_VERSION

BOLT_ERR_INVOCATION = 1
BOLT_ERR_RUNTIME    = 2

def print_usage():
    print(
        "Bolt OS package repository tool, version %s                                    \n"
        "Copyright (C) 2018 Tobias Koch <tobias.koch@gmail.com>                         \n"
        "                                                                               \n"
        "USAGE:                                                                         \n"
        "                                                                               \n"
        "  repo-tool [OPTIONS]                                                          \n"
        "                                                                               \n"
        "OPTIONS:                                                                       \n"
        "                                                                               \n"
        "  -h --help        Print this help message.                                    \n"
        "                                                                               \n"
        "  --skip <steps>   A comma-separated list of steps to skip:                    \n"
        "                                                                               \n"
        "                   * 'upstream':     Download Debian source package listings.  \n"
        "                   * 'fetch-rules':  Refresh local checkout(s) of Bolt package \n"
        "                                     rules.                                    \n"
        "                   * 'scan-rules':   Scan Bolt package rules for changes.      \n"
        "                   * 'scan-repo':    Search package repo for related binary    \n"
        "                                     packages.                                 \n"
        "                                                                               \n"
        "  --no-diffs       Disable differential updates.                               \n"
        "                                                                               \n"
        % BOLT_VERSION
    )
#end function

def parse_cmd_line():
    # define default configuration
    config = {
        "skip_steps": [],
        "do_diffs":   True,
    }

    try:
        opts, args = getopt.getopt(sys.argv[1:], "h", ["help", "skip=",
            "no-diffs"])
    except getopt.GetoptError as e:
        raise InvocationError("Error parsing command line: %s" % str(e))

    for o, v in opts:
        for case in switch(o):
            if case("--help", "-h"):
                print_usage()
                sys.exit(0)
                break
            if case("--skip"):
                config["gen_patches"] = True
                break
            if case("--no-diffs"):
                config["do_diffs"] = False
                break
        #end switch
    #end for

    return config, args
#end function

if __name__ == "__main__":
    try:
        # CONFIGURE LOGGING
        logging.basicConfig(level=logging.INFO,
                format="[%(levelname)-8s] %(message)s")

        # LOAD APP CONFIG
        config = AppConfig.instance().load_user_config()

        # CONFIGURE APP
        app_config = config\
                .get("apps", {})\
                .get("repository", {})\
                .get("appconfig", {})

        app_config.setdefault("SQLALCHEMY_DATABASE_URI",
                "sqlite:///" + AppConfig.get_config_folder() + os.sep +
                    "repository.db")

        # PARSE CMD LINE
        options, args = parse_cmd_line()

        # INITIALIZE DATABASE
        app_init(app_config)
        db.init_app(app)

        with app.app_context():
            db.create_all()

        # UPDATE DEBIAN SOURCES
        debian_sources = DebianSources(config)

        debian_sources.refresh()
        debian_sources.update_db()

        # UPDATE PACKAGE RULES
        bolt_sources = BoltSources(config)

        bolt_sources.refresh()
        bolt_sources.update_db()

    except InvocationError as e:
        sys.stderr.write("deb2bolt: %s\n" % str(e))
        sys.exit(BOLT_ERR_INVOCATION)
    except BoltError as e:
        sys.stderr.write("deb2bolt: %s\n" % str(e))
        sys.exit(BOLT_ERR_RUNTIME)
    except KeyboardInterrupt:
        sys.stderr.write("Caught keyboard interrupt. Exiting.\n")
        sys.exit(0)
    #end try
#end __main__
